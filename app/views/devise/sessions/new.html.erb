<style>
  #form-margin {
    margin-top: 20%;
    padding: 40px;
    background-color: white;
  }
  .form_logo {
    width: 70%;
    margin-bottom: 30px;
    margin-top: 30px;
  }
</style>

<div class="container">
  <div class="row">
    <div class="col s4"></div>
    <div class="col s4" >
      <div class="row z-depth-3" id="form-margin">
        <div class="row center-align" id="logo">
          <%= image_tag("logo/envizon-wide-export-blue.svg", class:"form_logo") %>
        </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name )) do |f| %>
        <div class="row right-align" >
          <div class="chip ">Please login</div>
        </div>
        <input type="hidden" name="user[username]" value="root">
        <div class="row">
          <%= f.input :password, required: false, :wrapper_html => { :class => 's12' } %>
        </div>
          <div class="row">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <div class="form-actions">
              <%= f.button :submit, "Log in" %><div class="right"><%= render "devise/shared/links" %></div>
            </div>
          </div>
      <% end %>
      </div>
    </div>
  </div>
  <div class="col s4"></div>
</div>
