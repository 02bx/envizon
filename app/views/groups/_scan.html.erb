<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">Ã—</span></button>
  <h4 class="modal-title">Copy selected clients to active group</h4>
</div>
<%= bootstrap_form_tag url: groups_scan_path, remote: true do |f| %>
    <div class="modal-body" id="group-add-modal-body">
      <div class="form-group">
        <label>Scan Name</label>
        <input type="text" id="scan_name" name="name" class="form-control" placeholder="Custom Scan">
      </div>
      <div class="form-group">
        <label>Selected clients</label>
        <select name="selected_clients[]" class="form-control select2-multiple" style="width: 100%;">
          <%= clients.each() do | temp_client | %>
            <option value="<%= temp_client.id %>"><%= temp_client.ip %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label>Nmap Arguments</label>
        <input type="text" id="arguments_list" name="arguments_list" class="form-control">
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
      <%= f.submit "Scan", class: "btn btn-success pull-right" %>
<% end %>
</div>

<script>
  $(".select2-multiple").select2({
    multiple: "multiple"
  });
  
  //select all values per default

  $(".select2-multiple option").prop("selected", "selected");
  $(".select2-multiple").trigger("change");
</script>
